<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:AudioSync.Client.ViewModels"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="AudioSync.Client.Views.ToolDialog"
        Title="Tool Manager"
        Width="700" Height="300">

	<Design.DataContext>
		<viewModels:ToolDialogViewModel />
	</Design.DataContext>

	<Window.Styles>
		<StyleInclude Source="/Assets/StyleSheet.xaml" />
	</Window.Styles>

	<Grid Margin="5" RowDefinitions="Auto, Auto, Auto, *, Auto, Auto" ColumnDefinitions="Auto, *">

		<TextBlock Grid.Column="0" Grid.Row="0" FontSize="25" Text="Tool Manager" />
		
		<TextBlock Grid.Column="0" Grid.Row="1" Text="YTDL version" />
		<TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding Ytdl, Mode=OneWay}" />
		
		<Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
			<!-- Buttons -->
		</Grid>
		
		<Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Classes="Horizontal Separator" />
		<TextBlock Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Name="StatusBar" Margin="5"
		           Text="{Binding Status, Mode=OneWay}" />
	</Grid>
</Window>